<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/defaultBackground">

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonMainFragmentRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStringMainFragmentRefresh"
            android:background="@drawable/btn_background"
            android:textColor="@color/defaultBackground"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/buttonMainFragmentSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStringMainFragmentSetting"
            android:background="@drawable/btn_background"
            android:textColor="@color/defaultBackground"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear01"
        android:layout_margin="10dp"
        android:background="@drawable/boundary"/>

</RelativeLayout>